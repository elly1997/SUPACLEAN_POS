{
  "name": "supaclean-pos",
  "version": "1.0.0",
  "description": "Point of Sale System for SUPACLEAN Laundry & Dry Cleaning",
  "main": "server/index.js",
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File ./scripts/kill-ports.ps1 && concurrently \"npm run server\" \"npm run client\"",
    "server": "powershell -ExecutionPolicy Bypass -File ./scripts/kill-ports.ps1 && nodemon server/index.js",
    "server:prod": "node server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:render": "npm run install-all && npm run build",
    "install-all": "npm install && cd client && npm install",
    "kill-port": "powershell -ExecutionPolicy Bypass -File ./scripts/kill-ports.ps1",
    "fix-receipt-constraint": "node server/utils/fix-receipt-constraint.js",
    "verify-admin": "node server/utils/verifyAdmin.js",
    "migrate-items": "node scripts/run-migration.js",
    "pre-launch-db": "node scripts/run-pre-launch.js"
  },
  "keywords": [
    "pos",
    "laundry",
    "dry-cleaning",
    "business-management"
  ],
  "author": "SUPACLEAN",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
